@{
    ViewData["Title"] = "Products";
}
@model ViewModel

<div class="header">
    <nav>
        <a class="nav-link" href="/products">Products</a> 
        <a class="nav-link" href="/categories">Categories</a>
    </nav>
</div>

<div class="wrapper">
    <div class="left">
        <h1>New Product</h1>
        <form action="/products" method="post">
            <div class="form-group">
                <span class="alert-danger" asp-validation-for="Product.Name"></span><br>
                <label asp-for="Product.Name"></label>
                <input type="text" asp-for="Product.Name" class="form-control">

                <span class="alert-danger" asp-validation-for="Product.Description"></span><br>
                <label asp-for="Product.Description"></label>
                <input type="text" asp-for="Product.Description" class="form-control">

                <span class="alert-danger" asp-validation-for="Product.Price"></span><br>
                <label asp-for="Product.Price"></label>
                <input type="number" asp-for="Product.Price" step="0.01" min="0" class="form-control">
                <br>

                <button type="submit" class="btn btn-info">Submit</button>

            </div>
        </form>
    </div>

    <div class="right">
        <h1>Existing Products</h1>
            @{
            foreach(Product product in Model.Products)
            {
                <ul>
                <h5> <a href="/products/@product.ProductId" data-toggle="tooltip" title="Description: @product.Description.
Price: @product.Price">@product.Name </a></h5>
                </ul>
            }
        
            }

    </div>
</div>